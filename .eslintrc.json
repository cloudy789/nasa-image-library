{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "next"
    }],
    "no-console": ["error", {
      "allow": ["warn", "error", "log"]
    }],
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "react/prop-types": [0],
    "jsx-a11y/media-has-caption": [0],
    "no-plusplus": [0]
  }
}
